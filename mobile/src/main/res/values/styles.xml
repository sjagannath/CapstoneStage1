<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="TextViewStyleSmall" parent="TextViewStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewHeading" parent="TextViewStyle">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/ripple_button</item>
        <item name="android:textSize">18sp</item>
        <item name="android:elevation">6dp</item>
    </style>
</resources>
